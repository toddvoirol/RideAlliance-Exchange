{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // keep project-local overrides while inheriting module/interop settings
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
